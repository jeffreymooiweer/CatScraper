<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catscraper</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header class="header">
        <div class="logo-container">
            <img src="/images/catscraper.jpg" alt="Catscraper Logo" class="logo">
            <h1>Catscraper</h1>
        </div>
    </header>

    <div class="container">
        <form id="uploadForm" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Upload Excel-bestand:</label>
                <input type="file" name="file" id="fileInput" required>
            </div>

            <div class="form-group">
                <label for="column">Kies Kolom met Artikelnummers:</label>
                <select name="column" id="column" disabled></select>
            </div>

            <div class="form-group checkbox-container">
                <label for="hasHeader">Bestand bevat koptekst</label>
                <input type="checkbox" name="hasHeader" id="hasHeader">
            </div>

            <!-- Leverancier 1 -->
            <h3>Leverancier 1</h3>
            <div class="supplier-section">
                <!-- Leverancier 1 Fields -->
                <!-- ... Voeg de velden van Leverancier 1 toe zoals in het vorige voorbeeld ... -->
            </div>

            <!-- Leverancier 2 -->
            <h3>Leverancier 2</h3>
            <div class="supplier-section">
                <!-- Leverancier 2 Fields -->
                <!-- ... Voeg de velden van Leverancier 2 toe zoals in het vorige voorbeeld ... -->
            </div>

            <button type="submit">Uploaden en Verwerken</button>
        </form>
    </div>

    <script>
        document.getElementById('fileInput').addEventListener('change', function () {
            const fileInput = document.getElementById('fileInput');
            const columnDropdown = document.getElementById('column');
            const formData = new FormData();
            formData.append('file', fileInput.files[0]);

            fetch('/scan-columns', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(columns => {
                columnDropdown.innerHTML = ''; // Leeg de dropdown eerst
                columns.forEach(col => {
                    const option = document.createElement('option');
                    option.value = col;
                    option.textContent = `Kolom ${col}`;
                    columnDropdown.appendChild(option);
                });
                columnDropdown.disabled = false; // Zet de dropdown aan zodra kolommen zijn geladen
            })
            .catch(error => {
                console.error('Fout bij het scannen van kolommen:', error);
            });
        });

        function toggleCustomerNumber1() {
            const section = document.getElementById('customerNumber1Section');
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }

        function toggleCustomerNumber2() {
            const section = document.getElementById('customerNumber2Section');
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</body>
</html>
